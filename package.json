{
  "name": "koa2-ts-rest",
  "version": "1.0.0",
  "description": "An opinionated boilerplate for koa v2 with typescript",
  "scripts": {
    "start": "node --inspect-brk bin/server",
    "watch": "nodemon bin/server",
    "lint": "eslint 'src/**/*' --ext .js,.ts",
    "lint:fix": "eslint 'src/**/*' --ext .js,.ts --fix",
    "test": "jest",
    "doc": "apidoc -i src/ -o apidoc/"
  },
  "author": "Haroon Khan <aitchkhan@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "apidoc": "^0.20.1",
    "boom": "^7.3.0",
    "convict": "^6.2.2",
    "debug": "^4.1.1",
    "koa": "^2.11.0",
    "koa-bodyparser": "^4.3.0",
    "koa-bunyan-logger": "^2.1.0",
    "koa-compose": "^4.1.0",
    "koa-json": "^2.0.2",
    "koa-mount": "^4.0.0",
    "koa-router": "^8.0.8",
    "koa-static": "^5.0.0",
    "mysql": "^2.18.1",
    "reflect-metadata": "^0.1.13",
    "serverless-http": "^2.3.2",
    "ts-node": "^8.8.2",
    "typedi": "^0.8.0",
    "typeorm": "^0.2.24",
    "typeorm-typedi-extensions": "^0.2.3"
  },
  "devDependencies": {
    "@types/boom": "^7.3.0",
    "@types/bunyan": "^1.8.6",
    "@types/convict": "^4.2.1",
    "@types/debug": "^4.1.5",
    "@types/jest": "^25.2.1",
    "@types/koa": "^2.11.3",
    "@types/koa-bodyparser": "^4.3.0",
    "@types/koa-bunyan-logger": "^2.1.2",
    "@types/koa-json": "^2.0.18",
    "@types/koa-mount": "^4.0.0",
    "@types/koa-router": "^7.4.0",
    "@types/koa-static": "^4.0.1",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "body-parser": "^1.19.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-plugin-import": "^2.19.1",
    "husky": "^4.2.5",
    "jest": "^25.3.0",
    "lint-staged": "^10.1.3",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.4",
    "pretty-quick": "^2.0.1",
    "serverless-offline": "^6.1.4",
    "serverless-plugin-optimize": "^4.1.4-rc.1",
    "serverless-plugin-typescript": "^1.1.9",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": ""
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "npm run lint:fix",
      "pretty-quick",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testMatch": [
      "**/test/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  }
}
